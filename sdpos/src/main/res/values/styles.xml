<resources>

    <!-- base -->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <!-- 加载中对话框的样式 -->
    <style name="dialog_loading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Large" parent="@android:style/TextAppearance.Large" />

    <style name="Medium" parent="@android:style/TextAppearance.Medium" />

    <style name="Small" parent="@android:style/TextAppearance.Small" />


    <style name="textWhite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="info_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <!-- info,from标题: -->
    <style name="info_field_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAppearance">@style/Medium</item>
        <item name="android:textColor">@color/infoTitle</item>
    </style>

    <!-- info值字段:是个下划线 -->
    <style name="info_field_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/Small</item>
        <item name="android:textColor">@color/formValue</item>
    </style>

    <!-- info值编辑字段:是个下划线 -->
    <style name="info_field_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textAppearance">@style/Small</item>
        <item name="android:textColor">@color/formValue</item>
    </style>

    <!-- ==============================按钮 ========================== -->

    <!-- 按钮 -->
    <style name="btn_a">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:background">@drawable/btn_a2</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textAppearance">@style/Small</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="btn_a_weight1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_a</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textAppearance">@style/Large</item>
        <item name="android:textColor">#fff</item>
    </style>

    <!-- ==============================输入框 ========================== -->

    <style name="login_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="input_login">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textAppearance">@style/Medium</item>
        <item name="android:textColorHint">#B0C4DE</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/list_bg</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/list_spliter</item>
        <item name="android:dividerHeight">0.1dp</item>
    </style>

</resources>
