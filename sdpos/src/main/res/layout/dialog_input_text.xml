<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/hk_dialog_input_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_page3"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/dialog_title"
        android:textAppearance="@style/Medium"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/hk_dialog_input_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:text=""
        android:textAppearance="@style/Medium"
        android:textColor="@color/text"/>

    <EditText
        android:id="@+id/hk_dialog_input_edit"
        style="@style/input_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="1"
        android:textAppearance="@style/Medium"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#C6C3C6"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hk_dialog_input_cancel"
            style="@style/btn_a"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@android:string/cancel"/>

        <Button
            android:id="@+id/hk_dialog_input_ok"
            style="@style/btn_a"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@android:string/ok"/>
    </LinearLayout>

</LinearLayout>