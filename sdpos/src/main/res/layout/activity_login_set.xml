<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00519D"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/login_set_back"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAppearance="@style/Large" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="设置"
                android:textColor="#fff"
                android:textAppearance="@style/Large" />
        </LinearLayout>

        <TableLayout
            android:layout_width="399dp"
            android:layout_height="wrap_content"
            android:stretchColumns="1" >

            <TableRow
                style="@style/info_row"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    style="@style/info_field_title"
                    android:text="APIKEY" />

                <EditText
                    android:id="@+id/login_set_apikey"
                    style="@style/info_field_edit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="接口调用授权码"
                    android:inputType="textPassword"
                    android:text="sd"
                    android:textCursorDrawable="@null" />
            </TableRow>

            <TableRow
                style="@style/info_row"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    style="@style/info_field_title"
                    android:text="服务地址" />

                <EditText
                    android:id="@+id/login_set_service_url"
                    style="@style/info_field_edit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="例如: http://192.168.100.123:88/"
                    android:imeOptions="actionDone"
                    android:text="http://59.36.18.87:8089/Service1/"
                    android:textCursorDrawable="@null" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/login_set_save"
                style="@style/btn_a"
                android:layout_width="110dp"
                android:text="保存"
                android:textAppearance="@style/Large" />

            <Button
                android:id="@+id/login_set_update"
                style="@style/btn_a"
                android:visibility="gone"
                android:layout_width="110dp"
                android:text="更新版本"
                android:textAppearance="@style/Large" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>