<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:orientation="horizontal"
        android:padding="6dp">

        <LinearLayout style="@style/input_content">

            <TextView
                style="@style/input_label"
                android:text="仓库" />

            <TextView
                android:id="@+id/page_pos_stock"
                style="@style/input_edit"
                android:background="@drawable/input_a" />
        </LinearLayout>


        <LinearLayout style="@style/input_content">

            <TextView
                style="@style/input_label"
                android:text="经手人" />

            <EditText
                android:id="@+id/page_pos_user"
                style="@style/input_edit"
                android:enabled="false" />
        </LinearLayout>

        <LinearLayout style="@style/input_content">

            <TextView
                style="@style/input_label"
                android:text="条码" />

            <EditText
                android:id="@+id/page_pos_barcode"
                style="@style/input_edit_barcode" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkturquoise"
        android:gravity="bottom">

        <TextView
            style="@style/textReportHeader"
            android:text="序号" />

        <TextView
            style="@style/textReportHeader"
            android:text="商品编码" />

        <TextView
            style="@style/textReportHeader"
            android:text="商品名称" />

        <TextView
            style="@style/textReportHeader"
            android:text="颜色代号" />

        <TextView
            style="@style/textReportHeader"
            android:text="颜色名称" />

        <TextView
            style="@style/textReportHeader"
            android:text="尺码代号" />

        <TextView
            style="@style/textReportHeader"
            android:text="尺码" />

        <TextView
            style="@style/textReportHeader"
            android:text="单价" />

        <TextView
            style="@style/textReportHeader"
            android:text="折扣" />

        <TextView
            style="@style/textReportHeader"
            android:text="数量" />

        <TextView
            style="@style/textReportHeader"
            android:text="金额" />
    </LinearLayout>

    <ListView
        android:id="@+id/page_pos_list"
        style="@style/list_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkturquoise"
        android:gravity="bottom">

        <TextView
            style="@style/textReportHeader"
            android:text="" />

        <TextView
            style="@style/textReportHeader"
            android:text="" />

        <TextView
            style="@style/textReportHeader"
            android:text="" />

        <TextView
            style="@style/textReportHeader"
            android:text="" />

        <TextView
            style="@style/textReportHeader"
            android:text="" />

        <TextView
            style="@style/textReportHeader"
            android:text="" />

        <TextView
            style="@style/textReportHeader"
            android:text="" />

        <TextView
            style="@style/textReportHeader"
            android:text="" />

        <TextView
            style="@style/textReportHeader"
            android:text="" />

        <TextView
            android:id="@+id/page_pos_foot_qty"
            style="@style/textReportHeader"
            android:text="数量" />

        <TextView
            android:id="@+id/page_pos_foot_amount"
            style="@style/textReportHeader"
            android:text="金额" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="6dp">

        <LinearLayout style="@style/input_content">

            <TextView
                style="@style/input_label"
                android:minWidth="100dp"
                android:text="手工单号" />

            <EditText
                android:id="@+id/page_pos_ManualBill"
                style="@style/input_edit_barcode"
                android:minWidth="100dp" />
        </LinearLayout>

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_weight="2" />

        <Button
            android:id="@+id/page_pos_CreateBill"
            style="@style/btn_a"
            android:text="新增" />

        <Button
            android:id="@+id/page_pos_GetBill"
            style="@style/btn_a"
            android:text="取单" />

        <Button
            android:id="@+id/page_pos_SaveBill"
            style="@style/btn_a"
            android:text="挂单" />

        <Button
            android:id="@+id/page_pos_SubmitBill"
            style="@style/btn_a"
            android:text="过账" />

    </LinearLayout>

</LinearLayout>